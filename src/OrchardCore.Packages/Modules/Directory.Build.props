<Project>
  <PropertyGroup>
    <IncludedFiles>**\*</IncludedFiles>
    <ExcludedFiles>**\*.cs;*.csproj*;obj\**;bin\**;assets.json;Assets\**;Properties\**</ExcludedFiles>
  </PropertyGroup>

  <ItemGroup>
    <None Include="$(IncludedFiles)" Exclude="$(ExcludedFiles)" Pack="true">
      <PackagePath>contentFiles\any\any\Packages\$(PackageId)\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Package.Build.targets" Pack="true">
      <PackagePath>build\$(PackageId).targets</PackagePath>
    </None>
  </ItemGroup>
</Project>